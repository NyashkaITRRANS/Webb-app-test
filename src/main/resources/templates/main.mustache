    </form>


    {{#user}}
    <div>
        <form method="post" action="editCustomer">
            <input type="checkbox" name={{id}}>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <b>{{id}} |</b>
        <span>Username:{{username}} |</span>
        <a>Password:{{password}} | Email:{{email}} | DateReg:{{date}}  |</a>
            <div>
            <button formaction="block/{{id}}" type="submit">Block</button>
            <button formaction="unblock/{{id}}" type="submit">UnBlock</button>
            <button formaction="delete/{{id}}" type="submit">Delete</button>
            </div>
        </form>
    </div>
    {{/user}}

